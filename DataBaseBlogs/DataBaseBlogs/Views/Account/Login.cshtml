@model DataBaseBlogs.Models.ViewModel.LoginViewModel

<h1>Login view model</h1>
<a class="btn btn-warning" asp-action="Register" asp-controller="Account">Register</a>
<a class="btn" asp-action="UsersIdentity" asp-controller="Account">All users</a>
<form asp-action="Login" asp-controller="Account" asp-antiforgery="true">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            @Html.LabelFor(x => x.UserName)
            @Html.TextBoxFor(x => x.UserName)
            @Html.ValidationMessageFor(x => x.UserName)
        </div>
        <div>
            @Html.LabelFor(x => x.RememberNe)
            @Html.CheckBoxFor(x => x.RememberNe)
        </div>
        <div>
            @Html.LabelFor(x => x.Password)
            @Html.PasswordFor(x => x.Password)
            @Html.ValidationMessageFor(x => x.Password)
        </div>
        <div>
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>
    </div>
</form>